<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:background="#FFFFBB33"
            android:layout_height="64dp"
            android:scaleType="center"
            android:src="@drawable/header_logo"
            android:contentDescription="Goods"/>


    <android.support.design.widget.TextInputEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nhap vào tên đươn hàng"
        android:id="@+id/dl_main_act_name"/>

     <android.support.design.widget.TextInputEditText

         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:hint="Nhap vao ma so đơn hàng"
         android:id="@+id/dl_main_act_code"/>
      <android.support.design.widget.TextInputEditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/dl_main_act_soluong"
          android:hint="Nhap vao so lương don hang" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>