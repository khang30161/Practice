<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:background="#FFFFBB33"
            android:layout_height="64dp"
            android:scaleType="center"
            android:src="@drawable/header_logo"
            android:contentDescription="Goods"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhap vào tên đươn hàng"
            android:id="@+id/main_act_name"/>

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhap vao ma so đơn hàng"
            android:id="@+id/main_act_code"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_act_soluong"
            android:hint="Nhap vao so lương don hang" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/act_main_btn"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>